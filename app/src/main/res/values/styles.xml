<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
<!--        <item name="android:statusBarColor">@color/home_bg_color</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>





    <style name="CustomCardViewStyleLTR" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_LTR</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners_LTR" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
    </style>

    <style name="CustomCardViewStyleRTL" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_RTL</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners_RTL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="CustomCardViewStyleForFragment" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/CustomCardViewStyleForFragment_custom_top_corners</item>
    </style>


    <style name="CustomCardViewStyleForFragment_custom_top_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeTopRight">18dp</item>
    </style>


    <style name="ShapeAppearanceOverlay_Button_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomLeft">18dp</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeBottomRight">18dp</item>
        <item name="background">@color/main_theme_color</item>
    </style>





</resources>